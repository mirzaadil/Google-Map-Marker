<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/splash_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:lottie_autoPlay="true"
                app:lottie_fileName="ic_car.json"
                app:lottie_loop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.40"
            android:orientation="vertical"
            android:weightSum="4">

            <!--First-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView
                    android:id="@+id/vehicle_name"
                    style="@style/TextViewCustomStyle"
                    android:text="name" />

                <TextView
                    android:id="@+id/vehicle_engineType"
                    style="@style/TextViewCustomStyle"
                    android:text="engine type" />

            </LinearLayout>

            <!--Second-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView
                    android:id="@+id/vehicle_interior"
                    style="@style/TextViewCustomStyle"
                    android:text="interioor" />

                <TextView
                    android:id="@+id/vehicle_fuel"
                    style="@style/TextViewCustomStyle"
                    android:text="fuel" />
            </LinearLayout>

            <!--Third-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:weightSum="2">

                <TextView
                    android:id="@+id/vehicle_exterior"
                    style="@style/TextViewCustomStyle"
                    android:text="exterior" />

                <TextView
                    android:id="@+id/vehicle_vin"
                    style="@style/TextViewCustomStyle"
                    android:text="vin" />
            </LinearLayout>


            <!--Forth-->

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:weightSum="1">

                <TextView
                    android:id="@+id/vehicle_address"
                    style="@style/TextViewCustomStyle"
                    android:singleLine="true"
                    android:text="address" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>